{
  "name": "postcss-color-overlay",
  "version": "0.2.0",
  "description": "PostCSS plugin is used to calculte color overlay. The color mode must be RGBA.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "color calculator"
  ],
  "scripts": {
    "test": "jest && eslint *.js",
    "release": "release-it"
  },
  "author": "fan <lifan06@58ganji.com>",
  "license": "MIT",
  "repository": "Sunflowersmile/postcss-color-overlay",
  "bugs": {
    "url": "https://github.com/Sunflowersmile/postcss-color-overlay/issues"
  },
  "homepage": "https://github.com/Sunflowersmile/postcss-color-overlay",
  "dependencies": {
    "object-assign": "^4.1.1",
    "postcss": "^7.0.6"
  },
  "devDependencies": {
    "@logux/eslint-config": "^27.0.0",
    "eslint": "^5.10.0",
    "eslint-config-postcss": "^3.0.7",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "release-it": "^9.3.0"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "rules": {
      "security/detect-unsafe-regex": "off",
